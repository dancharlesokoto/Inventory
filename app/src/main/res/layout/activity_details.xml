<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".DetailsActivity">

     <TextView
        android:id="@+id/tvSweetSub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSweet"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:lineSpacingExtra="12dp"
        android:text="SALES MANAGEMENT SYSTEM"
        android:textAlignment="center"
        android:textColor="#D5D5D5"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/tvSweetprod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSweetSub"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:lineSpacingExtra="12dp"
        android:text="Product Details"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="18sp"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="10dp"
        android:background="#F2F2F2"
        android:layout_below="@id/tvSweetprod"/>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/barDt"
            android:layout_margin="2dp"
            android:background="@drawable/edit"
            android:padding="10dp"
            android:inputType="text"
            android:hint="Barcode"
            android:textSize="16dp"
            android:textFontWeight="1000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <TextView
        android:id="@+id/titleDt"
        android:layout_margin="2dp"
        android:background="@drawable/edit"
        android:padding="10dp"
        android:inputType="text"
        android:textSize="17dp"
        android:hint="Product Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/desDt"
        android:layout_margin="2dp"
        android:background="@drawable/edit"
        android:padding="10dp"
        android:inputType="textMultiLine|text"
        android:minHeight="80dp"
        android:textSize="17dp"
        android:hint="Product Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"/>
    <TextView
        android:id="@+id/priceDt"
        android:layout_margin="2dp"
        android:background="@drawable/edit"
        android:padding="10dp"
        android:inputType="number"
        android:hint="Unit Price"
        android:textSize="17dp"
        android:textColor="#008b00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"/>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_sub_foreground"
            android:id="@+id/minusDt"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/quantityDt"
            android:layout_margin="1dp"
            android:background="@drawable/edit"
            android:padding="10dp"
            android:inputType="number"
            android:hint="0"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_addit_foreground"
            android:id="@+id/addDt"/>

    </LinearLayout>

    <Button
        android:id="@+id/saveBtnDt"
        android:text="Add to Cart"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>


</LinearLayout>