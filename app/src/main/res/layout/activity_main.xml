<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView

        android:id="@+id/tvSweet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:lineSpacingExtra="12dp"
        android:text="WELCOME TO OUR INVENTORY"
        android:textAlignment="center"
        android:textColor="#3E4993"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvSweetSub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSweet"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:lineSpacingExtra="12dp"
        android:text="SALES MANAGEMENT SYSTEM"
        android:textAlignment="center"
        android:textColor="#D5D5D5"
        android:textSize="18sp"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="10dp"
        android:background="#F2F2F2"
        android:layout_below="@id/tvSweetSub"/>

    <EditText
        android:id="@+id/prodnoEt"
        android:layout_margin="2dp"
        android:background="@drawable/edit"
        android:padding="10dp"
        android:inputType="number"
        android:hint="Product No"
        android:textSize="20dp"
        android:textFontWeight="1000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/barEt"
            android:layout_margin="2dp"
            android:background="@drawable/edit"
            android:padding="10dp"
            android:inputType="text"
            android:hint="Barcode"
            android:textSize="22dp"
            android:textFontWeight="1000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <EditText
        android:id="@+id/titleEt"
        android:layout_margin="2dp"
        android:background="@drawable/edit"
        android:padding="10dp"
        android:inputType="text"
        android:hint="Enter Product Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/desEt"
        android:layout_margin="2dp"
        android:background="@drawable/edit"
        android:padding="10dp"
        android:inputType="textMultiLine|text"
        android:minHeight="80dp"
        android:hint="Product Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"/>
    <EditText
        android:id="@+id/priceEt"
        android:layout_margin="2dp"
        android:background="@drawable/edit"
        android:padding="10dp"
        android:inputType="number"
        android:hint="Unit Price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"/>

    <EditText
        android:id="@+id/quantityEt"
        android:layout_margin="2dp"
        android:background="@drawable/edit"
        android:padding="10dp"
        android:inputType="number"
        android:hint="Quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"/>
    <Button
        android:id="@+id/saveBtn"
        android:text="SAVE"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>


</LinearLayout>